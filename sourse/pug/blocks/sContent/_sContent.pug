mixin sContent()
	// start sContent
	+b.SECTION.sContent.section#sContent&attributes(attributes)
		.container
			+e.back-link(href='#')
				+icon('arrow-left')
				span ДАТЫ И ЦЕНЫ
			+b.section-title.text-center.text-xl-start
				h2.d-md-none БАЗОВЫЕ ЛАГЕРЯ компании
				p.d-md-none Central Asia Travel
				h2.d-none.d-md-block БАЗОВЫЕ ЛАГЕРЯ
				p.d-none.d-md-block компании Central Asia Travel
			+e.main-row.row
				+e.left-col.col-xl-auto
					+b.social
						+socItem('fb')
						+socItem('tw')
						+socItem('vb')
						+socItem('wa')
						+socItem('tg')
					//-tabs
					+b.tabs
						+e.caption
							+e.btn Базовый лагерь  (3600 м)
							+e.btn Лагерь 1 «Солнечный» (4400 м)
							+e.btn.active Меню базовых лагерей
						+e.wrap
							+e.content
								+firstTabContent()
							+e.content
								+firstTabContent()
							+e.content.active
								+lastTabContent()
					+videoBaner()
					+formStrip()
				+e.right-col.col-xl-auto.d-none.d-xl-block
					+rightColCont()
	// end sContent

mixin socItem(icon)
	+e.item(href='#')
		+icon(icon)

mixin socItemAlt(imgName)
	+e.item(href='#')
		img(loading="lazy" src=`img/@2x/${imgName}.png` alt="")

mixin rightColCont()
	+b.inerestingBl
		+e.H4.title.text-center.d-xl-none Это интересно
		+e.row.row
			+rightColItem(1)
				| Наши восходители
			+rightColItem(2)
				| отзывы о нас
			+rightColItem(3)
				| Экологическая акция
				br
				| «Чистый снег»
		+b.soc-row.row.justify-content-center.d-none.d-xl-flex
			.col-auto
				+socItemAlt('fb2')
			.col-auto
				+socItemAlt('inst2')
			.col-auto
				+socItemAlt('tw2')
			.col-auto
				+socItemAlt('yt2')

mixin rightColItem(imgNum, bootClass="")
	.col-12(class=bootClass)
		+e.img(href="#")
			img(loading="lazy" src=`img/@2x/r-col-${imgNum}.jpg`)
		+e.txt(href='#')
			block

mixin ddItem(HeadTxt, activeClass)
	+e.dd-item(class=activeClass)
		+e.dd-head.dd-head-js
			+e.dd-h-txt=HeadTxt
			+e.dd-h-plus
				+icon('plus')
		+e.dd-content.dd-content-js(class=activeClass)&attributes(attributes)
			block

mixin lightSt(imgName,lsTxt)
	+e.light-streep
		+e.ls-img
			img(loading="lazy" src=`img/@2x/ls-${imgName}.png` alt="")
		+e.ls-txt=lsTxt

mixin lsImg(imgName)
	+e.ls-pic-cont&attributes(attributes)
		+e.ls-pic
			img(loading="lazy" src=`img/@2x/${imgName}.jpg` alt="")

