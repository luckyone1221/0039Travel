mixin sGalery(data)
	// start sGalery
	+b.SECTION.sGalery.section#sGalery&attributes(attributes)
		.container
			+b.section-title.text-center
				h2
			.row
	// end sGalery

mixin menuGalerySlider()
	+b.galerySlider--js
		+e.head-row.row
			.col
				+e.H4.title фотогалерея меню базовых лагерей
			.col-auto
				+e.show-all(href='#')
					span
						| Показать все
						|
					span (48)
			.col-auto.d-none.d-lg-block
				+e.conrolls
					+b.galery-prev--js
						+icon('chevron-left')
					+b.galery-next--js
						+icon('chevron-right')
		+e.slider
			.swiper-container.galery-slider-js
				.swiper-wrapper
					+galerySlide(1, 'menuBase')
					+galerySlide(2, 'menuBase')
					+galerySlide(3, 'menuBase')
					+galerySlide(1, 'menuBase')
					+galerySlide(2, 'menuBase')
					+galerySlide(3, 'menuBase')
			+e.conrolls.d-lg-none
				+b.galery-prev--js
					+icon('chevron-left')
				+b.galery-next--js
					+icon('chevron-right')

mixin galerySlide(imgNum, dataFancyBox)
	.swiper-slide
		+e.galery-link(href=`img/@2x/galery-img-${imgNum}.png` data-fancybox=dataFancyBox)
			img(loading="lazy" src=`img/@2x/galery-img-${imgNum}.png` alt="")

